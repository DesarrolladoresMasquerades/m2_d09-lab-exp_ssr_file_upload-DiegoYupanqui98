  <textarea name="content" cols="30" rows="10"></textarea>
  <label for="imgUrl">Image:</label>
  <input type="file" name="imgUrl">
  <label for="picName">Picture's name:</label>
  <input type="text" name="picName">
  <button type="submit">Post</button>
</form>